<MudDialog>
    <DialogContent>
        <EditForm Model="@C_UsuarioDTO" OnValidSubmit="cm_Salvar">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField Disabled="true" Label="Id" @bind-Value="@C_UsuarioDTO!.Id" For="(() => C_UsuarioDTO!.Id)" />
                    <MudTextField Disabled="true" Label="Nome" @bind-Value="@C_UsuarioDTO!.Nome" For="(() => C_UsuarioDTO!.Nome)" />
                    <MudTextField Disabled="true" Label="E-mail" @bind-Value="@C_UsuarioDTO!.Email" For="(() => C_UsuarioDTO!.Email)" />
                    <MudTextField Mask="C_MascaraTelefone" Label="Telefone" @bind-Value="@C_UsuarioDTO!.Telefone" For="(() => C_UsuarioDTO!.Telefone)" />
                    <MudSelect Disabled="true" @bind-Text="C_UsuarioDTO.Cargo" T="string" Label="Nível" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("PROFESSOR")" />
                        <MudSelectItem Value="@("ALUNO")" />
                    </MudSelect>
                    <MudCheckBox Disabled="true" Label="Ativo" @bind-Checked="C_UsuarioDTO.Ativo" />
                </MudCardContent>
            </MudCard>
        </EditForm>
    </DialogContent>
    <DialogActions>
        @if(C_UsuarioDTO!.Cargo!.Equals("ALUNO"))
        {
            <MudButton OnClick="@(() => cm_Desativar(C_UsuarioDTO!.Nome!))"><MudIcon Icon="@Icons.Material.Filled.AirlineSeatIndividualSuite" /></MudButton>
            <MudSpacer />
        }
        <MudButton OnClick="cm_Cancelar"><MudIcon Icon="@Icons.Material.Filled.Cancel" /></MudButton>
        <MudButton Color="Color.Primary" OnClick="cm_Salvar"><MudIcon Icon="@Icons.Material.Filled.Save" /></MudButton>
    </DialogActions>
</MudDialog>
