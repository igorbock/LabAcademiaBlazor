@page "/registrar"
@attribute [Authorize(Roles = "ADM,PROFESSOR")]

@if (C_MostrarErros)
{
    <MudPaper Class="alert alert-danger" Elevation="2">
        @foreach (var error in C_Erros)
        {
            <MudText Typo="Typo.body1">@error</MudText>
        }
    </MudPaper>
}

<AuthorizeView Roles="ADM">
    <Authorized>
        <MudText Class="m-3" Typo="Typo.h5" Align="Align.Center">Registrar Professor</MudText>
    </Authorized>
    <NotAuthorized>
        <MudText Class="m-3" Typo="Typo.h5" Align="Align.Center">Registrar Aluno</MudText>
    </NotAuthorized>
</AuthorizeView>

<MudPaper Class="p-4" Elevation="5">
    <EditForm Model="C_Usuario" FormName="Registrar">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome" @bind-Value="C_Usuario.Nome" For="(() => C_Usuario.Nome)" />
        <MudTextField Label="E-mail" @bind-Value="C_Usuario.Email" For="(() => C_Usuario.Email)" />
        <MudTextField Label="Telefone" @bind-Value="C_Usuario.Telefone" For="(() => C_Usuario.Telefone)" />

        <AuthorizeView Context="Professor" Roles="ADM">
            <Authorized>
                <MudTextField Label="Senha" @bind-Value="C_Usuario.Senha" For="(() => C_Usuario.Senha)" />
                <MudTextField Label="Confirma Senha" @bind-Value="C_Usuario.ConfirmaSenha" For="(() => C_Usuario.ConfirmaSenha)" />
                <MudRadioGroup @bind-SelectedOption="C_Usuario.Cargo" For="(() => C_Usuario.Cargo)">
                    <MudRadio Option="@("PROFESSOR")">Professor</MudRadio>
                </MudRadioGroup>
            </Authorized>
        </AuthorizeView>
        <MudButton Class="mt-5" Variant="Variant.Filled" Color="Color.Primary" OnClick="cm_Registrar">Registrar</MudButton>
    </EditForm>
</MudPaper>
