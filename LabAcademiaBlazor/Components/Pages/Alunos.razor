@page "/alunos"
@inject IUsuariosService C_UsuariosService
@attribute [Authorize(Roles = "PROFESSOR")]
@attribute [StreamRendering(true)]

<h3>Exibição dos Alunos</h3>

@if (C_Alunos == null)
{
    <h4>Carregando...</h4>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">Cargo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in C_Alunos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>@item.Cargo</td>
                </tr>
            }
        </tbody>
    </table>
}